// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "inlay_hints": {
    "enabled": true
  },
  "icon_theme": "Material Icon Theme",
  "project_panel": {
    "auto_fold_dirs": false,
  },
  "base_keymap": "VSCode",
  "status_bar": {
    "experimental.show": false,
  },
  "relative_line_numbers": "disabled",
  "gutter": {
    "line_numbers": true,
  },
  "minimap": {
    "show": "never",
  },
  "cursor_shape": "block",
  "cursor_blink": true,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "auto_indent_on_paste": true,
  "linked_edits": true,
  "ensure_final_newline_on_save": true,
  "soft_wrap": "editor_width",
  "tab_size": 2,
  "session": {
    "trust_all_worktrees": true,
  },
  "ui_font_size": 16,
  "buffer_font_size": 16.0,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Tokyo Night Storm",
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000,
    },
  },
  "file_types": {
    "JSONC": [
      "**/.zed/**/*.json",
      "**/zed/**/*.json",
      "**/Zed/**/*.json",
      "**/.vscode/**/*.json",
    ],
    "Shell Script": [".env.*", ".zshrc", ".bashrc"],
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
    },
  },
  "git": {
    "inline_blame": {
      "enabled": true,
    },
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true,
          },
          "closureReturnTypeHints": {
            "enable": "always",
          },
        },
      },
    },
  },
  "languages": {
    "Shell Script": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "beautysh",
          "arguments": [
            "--indent-size",
            "2",
            "--variable-style",
            "braces",
            "-s",
            "paronly",
            "-",
          ],
        },
      },
    },
  },
  "file_scan_inclusions": [".env*"],
  "always_treat_brackets_as_autoclosed": true,
  "auto_install_extensions": {
    "catppuccin": true,
    "everforest": true,
    "gruvbox-material": true,
    "html": true,
    "kanagawa-themes": true,
    "material-icon-theme": true,
    "nvim-nightfox": true,
    "rose-pine-theme": true,
    "tokyo-night": true,
    "asciidoc": true,
    "assembly": true,
    "basher": true,
    "cargo-appraiser": true,
    "cargo-tom": true,
    "color-highlight": true,
    "comment": true,
    "csv": true,
    "docker-compose": true,
    "dockerfile": true,
    "env": true,
    "go-snippets": true,
    "hyprlang": true,
    "java": true,
    "java-eclipse-jdtls": true,
    "lua": true,
    "latex": true,
    "live-server": true,
    "marksman": true,
    "pylsp": true,
    "python-refactoring": true,
    "python-reqiurements": true,
    "python-snippets": true,
    "rainbow-csv": true,
    "sql": true,
    "toml": true,
    "xml": true,
  },
}
